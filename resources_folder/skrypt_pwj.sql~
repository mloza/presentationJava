CREATE TABLE presentation 
(
id INTEGER(10) PRIMARY KEY AUTO_INCREMENT UNIQUE, 
name VARCHAR(255) NOT NULL
) ENGINE= InnoDB, CHARACTER SET= utf8, COLLATE = utf8_general_ci;

CREATE TABLE slide 
(
id INTEGER(10) PRIMARY KEY AUTO_INCREMENT UNIQUE, 
presentation_id INTEGER(10) NOT NULL,
duration INTEGER(10) NOT NULL,
position INTEGER(10) NOT NULL,
type TINYINT(10) NOT NULL
) ENGINE= InnoDB, CHARACTER SET= utf8, COLLATE = utf8_general_ci;

CREATE TABLE imageSlide 
(
id INTEGER(10) PRIMARY KEY AUTO_INCREMENT UNIQUE, 
slide_id INTEGER(10) NOT NULL,
description VARCHAR(255),
width INTEGER(10) NOT NULL,
height INTEGER(10) NOT NULL,
path VARCHAR(255) NOT NULL
) ENGINE= InnoDB, CHARACTER SET= utf8, COLLATE = utf8_general_ci;

CREATE TABLE htmlSlide 
(
id INTEGER(10) PRIMARY KEY AUTO_INCREMENT UNIQUE, 
slide_id INTEGER(10) NOT NULL,
description VARCHAR(255),
path VARCHAR(255) NOT NULL
) ENGINE= InnoDB, CHARACTER SET= utf8, COLLATE = utf8_general_ci;

CREATE TABLE videoSlide 
(
id INTEGER(10) PRIMARY KEY AUTO_INCREMENT UNIQUE, 
slide_id INTEGER(10) NOT NULL,
name VARCHAR(255) NOT NULL,
description VARCHAR(255),
fps INTEGER(3),
format VARCHAR(4),
path VARCHAR(255) NOT NULL
) ENGINE= InnoDB, CHARACTER SET= utf8, COLLATE = utf8_general_ci;

ALTER TABLE slide ADD CONSTRAINT fkSlide FOREIGN KEY (id) REFERENCES presentation(id);
ALTER TABLE imageSlide ADD CONSTRAINT fkImageSlide FOREIGN KEY (slide_id) REFERENCES slide(id);
ALTER TABLE htmlSlide ADD CONSTRAINT fkHtmlSlide FOREIGN KEY (slide_id) REFERENCES slide(id);
ALTER TABLE videoSlide ADD CONSTRAINT fkVideoSlide FOREIGN KEY (slide_id) REFERENCES slide(id);
